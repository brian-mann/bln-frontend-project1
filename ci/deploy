#!/bin/bash
echo "============================================================="
echo "          ESTRUCTURA DE TRAVIS Y DIRECTORIOS                 "
echo "============================================================="
ls -lha ..
echo "ls -lha $HOME"
ls -lha $HOME
echo "ls -lha $HOME/.cache"
ls -lha $HOME/.cache

echo "============================================================="
echo "          ESTRUCTURA APLICACIÓN FRONTEND                     "
echo "============================================================="
ls -lha dist

echo "============================================================="
echo "      GENERAR ESTRUCTURA APLICACIÓN BACKEND                  "
echo "============================================================="
mkdir -p public && cp -r dist/ ./public/
cp server/server.js .
ls -lha

echo "============================================================="
